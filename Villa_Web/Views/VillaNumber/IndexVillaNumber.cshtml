@model IEnumerable<Villa_Web.Models.Dto.VillaNumberDTO>
<br />

<di class="container p-4 broder" v>
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-dark">Villa Number List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-controller="VillaNumber" asp-action="CreateVillaNumber" class="btn btn-outline-success"><i class="bi bi-plus-square-fill"></i> Creat New Villa Number</a>
        </div>
    </div>
    
    <table class="table">
        <thead>
            <tr>
                <th>Villa Name</th>
                <th>Number</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Villa.Name</td>
                    <td>@item.VillaNo</td>
                    <td>
                        <a asp-controller="VillaNumber" asp-action="UpdateVillaNumber" asp-route-VillaNo="@item.VillaNo" class="btn btn-warning"><i class="bi bi-pencil-square"></i></a>
                        <a asp-controller="VillaNumber" asp-action="DeleteVillaNumber" asp-route-VillaNo="@item.VillaNo" class="btn btn-danger"><i class="bi bi-trash3"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</di>