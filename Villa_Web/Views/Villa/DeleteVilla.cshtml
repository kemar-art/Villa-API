@model Villa_Web.Models.Dto.VillaDTO

<form asp-action="DeleteVilla">
    <br />
    <div class="container border p-3">
        <h1 class="text-black">Delete Villa</h1>
        <hr />

        <input hidden asp-for="Id" />
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-2">
                <label asp-for="Name" class="control-label pt-2"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Name" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="Rate" class="control-label pt-2"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Rate" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="Details" class="control-label pt-2"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="Details" disabled class="form-control" rows="5"></textarea>
            </div>

            <div class="col-2">
                <label asp-for="ImageUrl" class="control-label pt-2"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Image" disabled class="form-control" />
                <input asp-for="ImageUrl" hidden class="form-control" />
                <input asp-for="ImageLocalPath" hidden class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="Occupancy" class="control-label pt-2"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Occupancy" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="SqFt" class="control-label pt-2"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="SqFt" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="Amenity" class="control-label pt-2"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="Amenity" disabled class="form-control"></textarea>
            </div>
            <div class="col-5 offset-2">
                <input type="submit" value="Delete" class="btn btn-danger form-control" />
            </div>
            <div class="col-5">
                <a asp-action="IndexVilla" class="btn-dark btn form-control"><i class="bi bi-arrow-left"></i> Back to List</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}